<?xml version="1.0" encoding="utf-8"?>
<!-- 커스텀 다이얼로그(팝업) 배경 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <!-- 중간 테두리 -->
            <solid android:color="#9C9C9C" />
            <!-- 제일 바깥 테두리 -->
            <stroke android:width="1px" android:color="#7E7E7E" />
            <corners android:radius="10px" />
        </shape>
    </item>
    <item android:bottom="1px" android:left="1px" android:right="1px" android:top="1px">
        <shape android:shape="rectangle" >
            <!-- 내부 바탕색 -->
            <solid android:color="#FFFFFF" />
            <!-- 제일 안쪽 테두리 -->
            <stroke android:width="1px" android:color="#D2D2D2" />
            <corners android:radius="9px" />
        </shape>
    </item>

