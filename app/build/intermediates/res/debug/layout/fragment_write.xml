<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ffffff"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:background="#dde3e6"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/userProfile"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/userName"
            android:layout_width="0px"
            android:layout_height="wrap_content" android:layout_weight="1"  android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>



        <ImageView
            android:id="@+id/add_geotag"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/map_marker_selector"/>

        <ImageView
            android:id="@+id/trash_can"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/trash_can"/>

        <FrameLayout
            android:id="@+id/photo_frame"
            android:layout_width="35dp"
            android:layout_height="35dp">

            <ImageView
                android:id="@+id/photo_imageview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/camera"/>

            <ProgressBar
                android:id="@+id/photo_progress_bar"
                style="?android:attr/android:progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"/>
        </FrameLayout>

        <View
            android:id="@+id/sns_seperator"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:background="#616161"/>

        <Button
            android:id="@+id/send_post"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/post_button_selector"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/post_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@null"
                android:focusable="false"
                android:hint="What is on your mind?"
                android:inputType="textCapSentences|textAutoCorrect|textMultiLine"/>

            <!-- to get size of toast -->

            <TextView
                android:id="@+id/write_check_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"/>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/text_length"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edittext_background"
        android:gravity="right"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:background="#dde3e6"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">

        <View
            android:layout_width="0px"
            android:layout_height="1px"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/twitter"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/twitter_button_selector"/>

        <View
            android:layout_width="0px"
            android:layout_height="1px"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/facebook"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/facebook_button_selector"/>

        <View
            android:layout_width="0px"
            android:layout_height="1px"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/gplus"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/google_plus_button_selector"/>

        <View
            android:layout_width="0px"
            android:layout_height="1px"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/foursquare"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/foursquare_button_selector"/>

        <View
            android:layout_width="0px"
            android:layout_height="1px"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/linkedin"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/linkedin_button_selector"/>

        <View
            android:layout_width="0px"
            android:layout_height="1px"
            android:layout_weight="1"/>

        <!--         <Button -->
        <!--             android:id="@+id/appnet" -->
        <!--             android:layout_width="35dp" -->
        <!--             android:layout_height="35dp" -->
        <!--             android:background="@drawable/appnet_button_selector" /> -->

        <!--         <View -->
        <!--             android:layout_width="0px" -->
        <!--             android:layout_height="1px" -->
        <!--             android:layout_weight="1" /> -->
    </LinearLayout>

